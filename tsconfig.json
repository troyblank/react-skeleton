{
	"compilerOptions": {
		"target": "ES2019",
		"baseUrl": "./",
		"outDir": "./dist",
		"module": "es6",
		"allowJs": true,
		"declaration": true,
		"sourceMap": true,
		"inlineSources": true,
		"skipLibCheck": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react",
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"index.d.ts"
	],
	"exclude": [
		"node_modules"
	],
}
